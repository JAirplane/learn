@page "/genres/create"

<div class="row">
	<div class="col">
		<h1 class="text-info">Create Genre</h1>
	</div>
</div>

<div class="row">
	<div class="col-6">
		<EditForm Model="Genre" OnValidSubmit="Create">
			<DataAnnotationsValidator />
			<div class="form-group">
				<label>Genre Name: </label>
				<div>
					<InputText class="form-control mb-2" @bind-Value="genre?.Name" />
					<ValidationMessage For="(() => genre.Name)" />
				</div>
			</div>
			<button class="btn btn-outline-primary">Save</button>
		</EditForm>
	</div>
</div>

@code {
	private Genre genre = new();

	void Create()
	{
		Console.WriteLine(genre?.Name);
	}
}
